[core]
	pager = less -F -X
	editor = vim
	autocrlf = false
	mergeoptions = --no-edit
	excludesfile = *.swp
[pull]
	rebase = true
[push]
	default = simple
[diff]
	tool = vimdiff
[mergetool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[alias]
	pl = pull --rebase --recurse-submodules
	st = status
	co = checkout
	ci = commit
	br = branch
	cp = cherry-pick --no-ff -x
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cn - %ci)'
	lg1 = log -n 1 --color --name-status --parents
	lga = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cn - %cr)'
